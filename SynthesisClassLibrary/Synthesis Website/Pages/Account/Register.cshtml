@page
@model Synthesis_Website.Pages.Account.RegisterModel
@{
}


<form method="post" class="align-content-center">
    <h1 class="h3 mb-3 fw-normal">Please Login</h1>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>


    <label>Name</label>
    <input type="text" class="form-control-plaintext" asp-for="Name" placeholder="Name">
    <span class="text-danger" asp-validation-for="Name"></span>


    <label>Email address</label>
    <input type="email" class="form-control-plaintext" asp-for="Email" placeholder="name@example.com">
    <span class="text-danger" asp-validation-for="Email"></span>

    <label>Address</label>
    <input type="text" class="form-control-plaintext" asp-for="Address" placeholder="123 Fake Street">
    <span class="text-danger" asp-validation-for="Address"></span>

    <label>Birthdate</label>
    <input type="date" class="form-control-plaintext" asp-for="BirthDate" >
    <span class="text-danger" asp-validation-for="BirthDate"></span>


    <label>Password</label>
    <input type="password" class="form-control-plaintext" asp-for="Password" placeholder="Password">
    <span class="text-danger" asp-validation-for="Password"></span>

    <br />

    <a class="nav-link" asp-area="" asp-page="/Account/LogIn">Login Now</a>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
</form>